	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
"Add a shebang": {
	"scope": "sh",
	"prefix": "shebang",
	"body": [
		"#!/bin/bash",
	],
	"description": "Adds shebang to script"
}
"Add a case statement": {
	"scope": "sh",
	"prefix": "case",
	"body": [
		"case $var in",
	    	" )",
				"# code if match",
				";;",
			" )",
				"# code if match",
				";;",
			" )",	
				"# code if match",
				";;",
			"*) #default case",
				"# code if default case",
				";;",
		"esac", 
	],
	"description": "Adds case statement structure"
}

"User prompt": {
	"scope": "sh",
	"prefix": "userprompt",
	"body": [
		"read -p 'The prompt text goes here: ' var",
	],
	"description": "Adds user prompt"
}

"Add And-Or IF_ELSE test": {
	"scope": "sh",
	"prefix": "andorifelse",
	"body": [
		"if [[ {andtest} ]] && ( [[ {oroption1} ]] || [[ {oroption1} ]] ); then",
			"# code if true",
		"else",
			"# code if true",
		"fi",
	],
	"description": "Adds IF_ELSE test with one AND and two OR options"
}

"Black Colour": {
